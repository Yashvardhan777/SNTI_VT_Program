<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title>Project</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top" style="width: auto;">
        <a class="navbar-brand" href="/">Project</a>
        <a href="/guide/projects" class="nav-link" style="color: white;">Home</a>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class=" navbar-nav ml-auto">
                <li class="nav-item"><a class="nav-link" href="#"> Signed in as <%= currentUser.username %></a></li>
                <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
            </ul>
        </div>
    </nav>
    <div class="container ">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
            <div class="alert alert-success" role="alert">
                <%= success  %>
            </div>
        <% } %>
    </div>

<br>


<div class="container">
    <p class="display-3 text-center">
        Pending Approvals:
    </p>
    <br>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% studentList.forEach(student =>{ %>
            <div class="col-md-3 col-sm-6">
                <div class="card" style="margin-bottom: 20px;">
                    <div class="card-body">
                        <h5 class="card-title">Student: <%= student.username %></h5>
                        <form action="/guide/approve/<%= student._id %>" method="post">
                            <button class="btn btn-primary btn-block">
                                Approve
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>


<%-include("../partials/footer")%>
